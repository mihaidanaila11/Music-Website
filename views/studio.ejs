    <main>
        <h1>Studio Maker</h1>
        <h2>Learn to make your own music using <i>Musical Blocks</i></h2>

        <div id="studio">
            <div>
                <div class="track">Melody</div>
                <div class="track">Drums</div>
                <div class="track">counter</div>
            </div>
            <div class="timeline">
                <div class="timeline_track" id="melody_timeline">
                    <div class="selected_track" id="selected_melody">
                        <span class="timeline_track_title name">Melody1</span>
                        <span class="timeline_track_info bpm">BPM: 120</span>
                        <span class="timeline_track_info key">Key: Cmin</span>
                    </div>
                </div>
                <div class="timeline_track" id="drums_timeline">
                    <div class="selected_track" id="selected_drums">
                        <span class="timeline_track_title name">Melody1</span>
                        <span class="timeline_track_info bpm">BPM: 120</span>
                    </div>
                </div>
                <div class="timeline_track" id="counter_timeline">
                    <div class="selected_track" id="selected_counter">
                        <span class="timeline_track_title name">Melody1</span>
                        <span class="timeline_track_info bpm">BPM: 120</span>
                        <span class="timeline_track_info key">Key: Cmin</span>
                    </div>
                </div>
            </div>
            <script src="/js/colorTimeline.js"></script>
        </div>



        <h2>Block inventory </h2>

        <div id="inventory">

            <div class = inventory_track>
                <div class="inventory_track_name">Melodies</div>
                <div class="inventory_track_container" id="inventory_melody">
                </div>
            </div>

            <div class = inventory_track>
                <div class="inventory_track_name">Drums</div>
                <div class="inventory_track_container" id="inventory_drums">
                </div>
            </div>

            <div class = inventory_track>
                <div class="inventory_track_name">Counter Melody</div>
                <div class="inventory_track_container" id="inventory_counter">
                </div>
            </div>
        </div>

        <h2 id="checkResult">Check result</h2>
    </main>



